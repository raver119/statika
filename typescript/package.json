{
  "name": "statika",
  "version": "0.0.15",
  "description": "Statika API",
  "main": "build/index.js",
  "typings": "build/index.d.ts",
  "scripts": {
    "check": "npm-check --skip-unused",
    "test": "jest --ci=true --watch",
    "build": "tsc --build tsconfig.build.json",
    "test:ci": "jest --ci=true"
  },
  "keywords": [],
  "author": "raver119",
  "license": "Apache-2.0",
  "dependencies": {
    "@types/browser-or-node": "^1.2.0",
    "@types/btoa": "^1.2.3",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.9.1",
    "@types/uuid": "^8.3.0",
    "browser-or-node": "^1.3.0",
    "btoa": "^1.2.1",
    "jest": "^27.1.1",
    "scrypt-js": "^3.0.1",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.1.0",
    "typescript": "4.3.5",
    "uuid": "^8.3.1",
    "w3c-xmlhttprequest": "^3.0.3",
    "whatwg-fetch": "^3.6.2"
  },
  "devDependencies": {
  },
  "resolutions": {
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/setupTests.js"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!shiva/)"
    ],
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json"
      },
      "google": {}
    },
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.schema.ts",
      "!src/schema/*.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 0,
        "functions": 0,
        "lines": 0,
        "statements": 0
      }
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "\\.(ts)$": "ts-jest",
      "^.+\\.js$": "babel-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$"
  }
}
