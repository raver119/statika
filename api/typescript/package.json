{
  "name": "statika",
  "version": "0.0.3",
  "description": "Statika API",
  "main": "build/index.js",
  "typings": "build/index.d.ts",
  "scripts": {
    "test": "jest --ci=true --watch",
    "build": "tsc --build tsconfig.json",
    "audit fix": "npm audit fix",
    "test:ci": "jest --ci=true"
  },
  "keywords": [],
  "author": "raver119",
  "license": "Apache-2.0",
  "dependencies": {
    "jest": "^26.6.3",
    "ts-node": "^9.0.0",
    "uuid": "^8.3.1",
    "whatwg-fetch": "^3.5.0",
    "btoa": "^1.2.1",
    "w3c-xmlhttprequest": "^3.0.0",
    "browser-or-node": "^1.3.0",
    "scrypt-js": "^3.0.1",
    "typescript": "^4.1.2",
    "ts-jest": "^26.4.4",
    "@types/jest": "^26.0.15",
    "@types/uuid": "^8.3.0",
    "@types/node": "^12.19.6",
    "@types/btoa": "^1.2.3",
    "@types/browser-or-node": "^1.2.0"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/setupTests.js"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!shiva/)"
    ],
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json"
      },
      "google": {}
    },
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.schema.ts",
      "!src/schema/*.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 0,
        "functions": 0,
        "lines": 0,
        "statements": 0
      }
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "\\.(ts)$": "ts-jest",
      "^.+\\.js$": "babel-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$"
  }
}
